{
    "name": "backend",
    "version": "1.0.0",
    "description": "MERN App Backend",
    "main": "server.js",
    "scripts": {
        "heroku-postbuild": "npm run install-frontend-heroku && npm run build-frontend && npm run build && npm run delete-dev",
        "install-frontend-heroku": "cd frontend && npm install node-sass && npm install --only=dev && npm install",
        "install-frontend": "cd frontend && npm install",
        "build-frontend": "cd frontend && npm run prod-build",
        "delete-dev": "ts-node deleteDev.ts",
        "start": "npm run build && npm run serve",
        "build": "npm run build-ts && npm run tslint && npm run copy-frontend",
        "build-ts": "tsc",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "copy-frontend": "ts-node copyFrontend.ts",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "watch-ts": "tsc -w",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "keywords": [],
    "author": "DBC",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "bluebird": "^3.5.5",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "connect-mongo": "^3.0.0",
        "cookie-parser": "^1.4.4",
        "dotenv": "^8.0.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-session": "^1.16.2",
        "lusca": "^1.6.1",
        "mongoose": "^5.6.0",
        "passport": "^0.4.0",
        "path": "^0.12.7",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/bluebird": "^3.5.27",
        "@types/body-parser": "^1.17.0",
        "@types/compression": "0.0.36",
        "@types/connect-mongo": "0.0.42",
        "@types/cookie-parser": "^1.4.1",
        "@types/dotenv": "^6.1.1",
        "@types/errorhandler": "0.0.32",
        "@types/express": "^4.17.0",
        "@types/express-session": "^1.15.13",
        "@types/lusca": "^1.6.0",
        "@types/mongodb": "^3.1.28",
        "@types/mongoose": "^5.5.6",
        "@types/passport": "^1.0.0",
        "@types/shelljs": "^0.8.5",
        "@types/winston": "^2.4.4",
        "glob": "^7.1.4",
        "shelljs": "^0.8.3",
        "ts-node": "^8.3.0",
        "tslint": "^5.18.0",
        "tslint-microsoft-contrib": "^6.2.0",
        "typescript": "^3.5.2"
    }
}
