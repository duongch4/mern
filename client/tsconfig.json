{
    "compilerOptions": {
        "outDir": "../dist", // for tsc cmd
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "jsx": "react",
        "target": "es6",
        "lib": [
            "dom",
            "es7"
        ],
        "baseUrl": "..",
        "paths": {
            "*": [
                "node_modules/@types/*", // with `import <module-a>`, matching `../node_modules/@types/<module-a>`
                "client/types/"
            ]
        }
    },
    "include": [
        "./**/*"
    ]
}